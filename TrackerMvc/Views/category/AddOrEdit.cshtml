@model TrackerMvc.Models.CategoryMvc
@{
    ViewBag.Title = "AddOrEdit";
}

<h2>AddOrEdit</h2>

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.CategoryId)


        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName)
            @Html.EditorFor(model => model.CategoryName)
            @Html.ValidationMessageFor(model => model.CategoryName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryLimit)
            @Html.EditorFor(model => model.CategoryLimit)
            @Html.ValidationMessageFor(model => model.CategoryLimit)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AvailableAmount)
            @Html.EditorFor(model => model.AvailableAmount)
            @Html.ValidationMessageFor(model => model.AvailableAmount)
        </div>


        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-danger" />
            <input type="reset" value="Reset" class="btn btn-danger" />
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}



